model Invoice {
  id              String   @id @default(cuid())
  programId       String
  paymentMethodId String // Stripe payment method ID
  amount          Int      @default(0)
  fee             Int      @default(0)
  total           Int      @default(0)
  createdAt       DateTime @default(now())

  program Program  @relation(fields: [programId], references: [id])
  payouts Payout[]

  @@index([programId])
}
