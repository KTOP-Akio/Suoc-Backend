{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["!.next/cache/**", ".next/**", "dist/**"]
    },
    "@dub/utils#build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "@dub/ui#build": {
      "dependsOn": ["@dub/utils#build"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
